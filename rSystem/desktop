w,h = term.getSize()

term.clear()
term.setCursorPos(1,1)
background.draw("background1")
paintutils.drawLine(1, h, w, h, _G.syscolor)
paintutils.drawPixel(1, h, _G.highlightcolor)
term.setCursorPos(1, h)
write("R")

while true do
  event, button, x, y = os.pullEventRaw("mouse_click")
  if x == 1 and y == h then
    paintutils.drawFilledBox(1, h+1, 5, h+8, _G.highlightcolor)
  end
end








sleep(5)
