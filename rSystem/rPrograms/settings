w,h = term.getSize()

centerPos = math.floor(h / 2)

term.setBackgroundColor(_G.syscolor)
term.clear()
rtext.center("Settings", 2)
term.setBackgroundColor(_G.highlightcolor)
rtext.center(" System Settings ", centerPos - 2)
rtext.center(" Login Settings ", centerPos)
rtext.center(" Visual Settings ", centerPos + 2)
while true do
  event, button, x, y = os.pullEvent("mouse_click")
  if x >= w / 2 - string.len(" System Settings ") / 2 and x <= w / 2 + string.len(" System Settings ") / 2 and y == centerPos - 2 then
    write("System")
  elseif x >= w / 2 - string.len(" Login Settings ") / 2 and x <= w / 2 + string.len(" Login Settings ") / 2 and y == centerPos then
    write("Login")
  elseif x >= w / 2 - string.len(" Visual Settings ") / 2 and x <= w / 2 + string.len(" Visual Settings ") / 2 and y == centerPos + 2 then
    write("Login")
  end
end
